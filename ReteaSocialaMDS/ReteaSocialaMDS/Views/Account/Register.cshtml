            dateFormat: "yy-mm-dd",
            duration: "slow",
            onClose: function(date) {
                alert(date);
            },
            onSelect: function(date) {
            alert(date);
        }
        });
        $("form").validate(
        {
            
        });

    });
    
</script>

}
